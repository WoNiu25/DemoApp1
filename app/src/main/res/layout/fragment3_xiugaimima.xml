<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/youImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:adjustViewBounds="true"
    android:src="@drawable/you"/>
<TextView
    android:layout_width="285dp"
    android:layout_height="50dp"
    android:text="修改密码"
    android:textSize="30dp"
    android:gravity="center"
    android:textColor="#000000"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:adjustViewBounds="true"
        android:src="@drawable/cha"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:"
            android:textSize="30dp"
            android:textColor="#0000ff"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="20050539232"
            android:textSize="30dp"
            android:textColor="#0000ff"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff">
 <EditText
     android:id="@+id/edt_Password"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:hint="请输入原密码"
     android:inputType="textPassword"
     android:maxLength="30"></EditText>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
      <EditText
          android:id="@+id/edt_newPassword"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:hint="请输入新密码"
          android:inputType="textPassword"
          android:maxLength="30"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#fff">
        <EditText
            android:id="@+id/edt_newPassword1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="30"></EditText>
    </LinearLayout>

<Button
    android:id="@+id/queding"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="50dp"
    android:text="确定设置"
    android:textSize="30dp"
    android:background="@drawable/quedingbj"/>

</LinearLayout>