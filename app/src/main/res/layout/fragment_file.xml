<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ycxy.FunctionActivity">
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/title"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/LinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        >
        <Button
            android:id="@+id/saoMa"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="扫一扫"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/faPiao"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="100dp" />
        <Button
            android:id="@+id/faPiao"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="发票助手"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="100dp" />
    </LinearLayout>
    <Button
        android:id="@+id/giveUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="投票"
        app:layout_constraintTop_toBottomOf="@id/LinLay"
        />
    <TextView
        android:id="@+id/tv_news"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="学校新闻"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/giveUp"
        />
    <TextView
        android:id="@+id/tv_news1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:maxLength="21"
        android:singleLine="true"
        android:clickable="true"
        android:text="校党委委员副校长余新卫看望明月山管委..."
        app:layout_constraintTop_toBottomOf="@id/tv_news"
        />

    <TextView
        android:id="@+id/tv_news2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:maxLength="21"
        android:singleLine="true"
        android:text="校党委书记曾晓春视察指导我校2022年高招..."
        app:layout_constraintTop_toBottomOf="@id/tv_news1" />

    <TextView
        android:id="@+id/tv_news3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:maxLength="21"
        android:singleLine="true"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/tv_news2"/>

    <TextView
        android:id="@+id/tv_news4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:maxLength="21"
        android:singleLine="true"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/tv_news3"/>

    <TextView
        android:id="@+id/tv_news5"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:maxLength="21"
        android:singleLine="true"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/tv_news4" />

    <Button
        android:id="@+id/btn_seemore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看更多"
        app:layout_constraintTop_toBottomOf="@id/tv_news5" />


</androidx.constraintlayout.widget.ConstraintLayout>

